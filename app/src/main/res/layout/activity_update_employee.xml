<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateEmployeeActivity">

    <ImageView
        android:id="@+id/imAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/staffavatar"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imAvatar"
        android:layout_marginTop="12dp"
        >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <EditText
                android:id="@+id/etName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter Name..."
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="6dp"
                android:layout_weight = "1"
                />
            <EditText
                android:id="@+id/etLastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter Last Name..."
                app:layout_constraintStart_toEndOf="@id/etName"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="6dp"
                android:layout_weight = "1"
                />

        </TableRow>

        <TableRow>
            <EditText
                android:id="@+id/etStreetAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Address"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="6dp"
                android:layout_weight = "2"
                />
            <EditText
                android:id="@+id/etCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="City"
                app:layout_constraintStart_toEndOf="@id/etName"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="6dp"
                android:layout_weight = "0"
                />


        </TableRow>

        <TableRow>

            <EditText
                android:id="@+id/etState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="State"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="6dp"
                android:layout_weight = "0"
                />
            <EditText
                android:id="@+id/etZip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Zip Code"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="6dp"
                android:layout_weight = "0"
                />


        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <EditText
                android:id="@+id/etDepartment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Department"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="6dp"
                android:layout_weight = "1"
                />
            <EditText
                android:id="@+id/etPostion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Position"
                app:layout_constraintStart_toEndOf="@id/etName"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="6dp"
                android:layout_weight = "1"
                />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >

            <EditText
                android:id="@+id/etTaxID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Tax ID"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="6dp"
                android:layout_weight = "1"
                />


        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/btnAddEmployee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="20sp"
        android:text="Update Employee"/>

</androidx.constraintlayout.widget.ConstraintLayout>